@model AdminModule.Models.UserListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Index</h1>

<div style="display: flex; align-items: center;">
    <form asp-controller="User" asp-action="Index" method="get" class="form-group" style="display: flex; align-items: center;">
        <label asp-for="SearchQuery">Search:</label>
        <input type="text" class="form-control" name="searchQuery" value="@Model.SearchQuery" style="margin-left:10px" />
        <button type="submit" class="btn btn-primary" style="margin-left:10px">Search</button>
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Users.FirstOrDefault().Id)</th>
            <th>@Html.DisplayNameFor(model => model.Users.FirstOrDefault().Username)</th>
            <th>@Html.DisplayNameFor(model => model.Users.FirstOrDefault().FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Users.FirstOrDefault().LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Users.FirstOrDefault().Email)</th>
            <th>@Html.DisplayNameFor(model => model.Users.FirstOrDefault().CountryOfResidence.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Users.FirstOrDefault().IsConfirmed)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.CountryOfResidence.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.IsConfirmed)</td>
                <td>
                    @Html.ActionLink("Toggle Confirmation", "Edit", new { item.Id }) |
                    @Html.ActionLink("Details", "Details", new { item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
